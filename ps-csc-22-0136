    <script>
        // Orbital animations with realistic relative speeds
        const orbits = [
            { id: 'mercury-orbit', duration: 5000 },   // Mercury: 88 Earth days
            { id: 'venus-orbit', duration: 12000 },    // Venus: 225 Earth days  
            { id: 'earth-orbit', duration: 20000 },    // Earth: 365 days
            { id: 'mars-orbit', duration: 38000 },     // Mars: 687 Earth days
            { id: 'jupiter-orbit', duration: 120000 }, // Jupiter: 12 Earth years
            { id: 'saturn-orbit', duration: 290000 },  // Saturn: 29 Earth years
            { id: 'uranus-orbit', duration: 840000 },  // Uranus: 84 Earth years
            { id: 'neptune-orbit', duration: 1650000 } // Neptune: 165 Earth years
        ];
        
        // Set up orbital animations
        orbits.forEach(orbit => {
            const element = document.getElementById(orbit.id);
            element.setAttribute('animation', {
                property: 'rotation',
                to: '0 360 0',
                dur: orbit.duration,
                loop: true,
                easing: 'linear'
            });
        });
        
        // Planets also rotate on their axis
        const planets = ['mercury', 'venus', 'earth', 'mars', 'jupiter', 'saturn', 'uranus', 'neptune'];
        planets.forEach(planet => {
            const element = document.getElementById(planet);
            element.setAttribute('animation', {
                property: 'rotation',
                to: '0 360 0',
                dur: Math.random() * 15000 + 5000, // Random rotation speed
                loop: true,
                easing: 'linear'
            });
        });
        
        // Create orbit visualization lines
        function createOrbitLines() {
            const distances = [4, 6, 8, 10, 15, 20, 25, 30];
            const scene = document.querySelector('a-scene');
            
            distances.forEach(distance => {
                const orbitLine = document.createElement('a-ring');
                orbitLine.setAttribute('radius-inner', distance - 0.05);
                orbitLine.setAttribute('radius-outer', distance + 0.05);
                orbitLine.setAttribute('rotation', '-90 0 0');
                orbitLine.setAttribute('color', 'rgba(100, 150, 255, 0.1)');
                orbitLine.setAttribute('material', 'side: double; transparent: true; opacity: 0.15');
                orbitLine.setAttribute('class', 'orbit-line');
                scene.appendChild(orbitLine);
            });
        }
        
        // Create orbit lines initially
        createOrbitLines();
        
        // Control functions
        let orbitsVisible = true;
        let labelsVisible = true;
        let isPaused = false;
        
        function toggleOrbits() {
            orbitsVisible = !orbitsVisible;
            const orbitLines = document.querySelectorAll('.orbit-line');
            orbitLines.forEach(line => {
                line.setAttribute('visible', orbitsVisible);
            });
        }
        
        function toggleLabels() {
            labelsVisible = !labelsVisible;
            const labels = document.querySelectorAll('.label');
            labels.forEach(label => {
                label.setAttribute('visible', labelsVisible);
            });
        }
        
        function togglePause() {
            isPaused = !isPaused;
            const animations = document.querySelectorAll('[animation]');
            animations.forEach(anim => {
                if (anim.components && anim.components.animation) {
                    if (isPaused) {
                        anim.components.animation.pause();
                    } else {
                        anim.components.animation.play();
                    }
                }
            });
        }
        
        // Add click events for planet information
        planets.forEach(planet => {
            const element = document.getElementById(planet);
            element.addEventListener('click', function(e) {
                e.stopPropagation();
                const planetData = {
                    'mercury': { name: 'Mercury', facts: 'Closest to Sun, Fastest orbit' },
                    'venus': { name: 'Venus', facts: 'Hottest planet, Thick atmosphere' },
                    'earth': { name: 'Earth', facts: 'Only planet with life, 70% water' },
                    'mars': { name: 'Mars', facts: 'Red planet, Has two moons' },
                    'jupiter': { name: 'Jupiter', facts: 'Largest planet, Great Red Spot' },
                    'saturn': { name: 'Saturn', facts: 'Famous rings, 82 moons' },
                    'uranus': { name: 'Uranus', facts: 'Rotates on its side, Ice giant' },
                    'neptune': { name: 'Neptune', facts: 'Windiest planet, Deep blue color' }
                };
                
                const data = planetData[planet];
                alert(`üåå ${data.name}\n\n${data.facts}`);
            });
        });
        
        // Sun click event
        document.querySelector('[position="0 0 0"] a-sphere').addEventListener('click', function() {
            alert('‚òÄÔ∏è SUN\n\nCenter of our Solar System\nTemperature: 5,500¬∞C\nAge: 4.6 billion years');
        });
        
        // Add keyboard controls
        document.addEventListener('keydown', function(e) {
            switch(e.key.toLowerCase()) {
                case ' ':
                    togglePause();
                    break;
                case 'o':
                    toggleOrbits();
                    break;
                case 'l':
                    toggleLabels();
                    break;
                case 'r':
                    // Reset camera
                    const camera = document.querySelector('a-camera').parentElement;
                    camera.setAttribute('position', '0 15 45');
                    camera.setAttribute('rotation', '-20 0 0');
                    break;
            }
        });
        
        // Add auto camera movement
        document.querySelector('a-camera').parentElement.setAttribute('animation', {
            property: 'rotation',
            to: '0 360 0',
            dur: 180000, // 3 minutes for full rotation
            loop: true,
            easing: 'linear'
        });
        
    </script>
</body>
</html>
