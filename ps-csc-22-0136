                  position="0 0 -50" scale="100 100 100"></a-entity>
        
        <!-- Sun at center -->
        <a-sphere position="0 0 0" radius="1.8" 
                  material="src: 2k_sun.jpg">
            <a-light type="point" color="#FFF" intensity="2" distance="50"></a-light>
        </a-sphere>
        <a-text value="SUN" position="0 -2.5 0" align="center" color="#FFD700" width="3" class="label"></a-text>
        
